{
	"info": {
		"_postman_id": "synthetic-id-generator-api",
		"name": "Synthetic ID Generator API",
		"description": "Smoke tests for Synthetic ID Generator backend API",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000/api/v1",
			"type": "string"
		},
		{
			"key": "api_key",
			"value": "your-api-key-here",
			"type": "string"
		},
		{
			"key": "profile_id",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Profiles",
			"item": [
				{
					"name": "Generate Profile",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									"",
									"pm.test(\"Response has success flag\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.success).to.be.true;",
									"});",
									"",
									"pm.test(\"Response contains profile data\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData.data).to.have.property('id');",
									"    pm.expect(jsonData.data).to.have.property('profile');",
									"    ",
									"    // Save profile ID for subsequent requests",
									"    pm.collectionVariables.set('profile_id', jsonData.data.id);",
									"});",
									"",
									"pm.test(\"Profile has required fields\", function () {",
									"    var jsonData = pm.response.json();",
									"    var profile = jsonData.data.profile;",
									"    pm.expect(profile).to.have.property('personal');",
									"    pm.expect(profile).to.have.property('address');",
									"    pm.expect(profile.personal).to.have.property('first_name');",
									"    pm.expect(profile.personal).to.have.property('last_name');",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "X-API-Key",
								"value": "{{api_key}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"gender\": \"random\",\n  \"age_range\": [25, 35],\n  \"region\": \"77\",\n  \"include_documents\": [\"passport\", \"inn\", \"snils\"]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/profiles/generate",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"profiles",
								"generate"
							]
						},
						"description": "Генерация нового синтетического профиля с полным набором документов"
					},
					"response": []
				},
